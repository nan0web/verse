{
	"name": "@nan0web/verse",
	"version": "1.0.0",
	"description": "I•We•Meta•Uni•Verse - the source of verse classes and algorithms.",
	"main": "src/index.js",
	"types": "types/index.d.ts",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"test": "node --test \"src/**/*.test.js\" | nan0test parse --fail",
		"test:coverage": "node --test --experimental-test-coverage --test-coverage-include=\"src/**/*.js\"",
		"test:coverage:collect": "nan0test coverage",
		"test:docs": "node --test src/README.md.js",
		"test:status": "nan0test status",
		"test:release": "node --test releases/**/*.test.js",
		"clean": "rm -rf .cache/ && rm -rf dist/",
		"clean:modules": "rm -rf node_modules",
		"release": "nan0release publish",
		"precommit": "npm test",
		"prepush": "npm test",
		"prepare": "husky",
		"playground": "node playground/main.js"
	},
	"keywords": [
		"verse",
		"nan0web",
		"fundamental"
	],
	"author": "ЯRаСлав YaRaSLove <support@yaro.page>",
	"license": "ISC",
	"packageManager": "pnpm@10.11.0",
	"devDependencies": {
		"@nan0web/db-fs": "^1.0.0",
		"@nan0web/co": "^1.0.0",
		"@nan0web/log": "^1.0.0",
		"@nan0web/types": "^1.0.0",
		"@nan0web/release": "^1.0.0",
		"@nan0web/test": "^1.0.0",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"@nan0web/co": "^1.0.0",
		"@nan0web/types": "^1.0.0"
	}
