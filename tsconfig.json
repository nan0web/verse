{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext"],
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": true,
		"outDir": "./types",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"allowJs": true,
		"checkJs": true
	},
	"include": ["src/**/*", "reality/Reality", "reality/Reality.el.examples.js", "reality/Reality.el.js", "reality/Reality.el.test.js", "reality/Reality.en.examples.js", "reality/Reality.en.js", "reality/Reality.en.test.js", "reality/Reality.uk.examples.js", "reality/Reality.uk.test.js", "reality/Reality.uk.js"],
	"exclude": ["node_modules", "src/**/*.test.js"]
}
